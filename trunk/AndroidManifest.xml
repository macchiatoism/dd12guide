<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appdev.onetwoguide"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
         <uses-library android:name="com.google.android.maps"/>
        
        <activity
            android:name="com.appdev.onetwoguide.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.appdev.onetwoguide.FoodMapActivity"
            android:label="@string/title_activity_food_map"
            android:parentActivityName="MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
       

        
        <!-- edited by Macc: Google Map API Key -->
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="42:00:E1:51:6E:B5:4A:78:04:8F:C7:62:8F:08:2D:00:4E:B8:1E:25;com.appdev" />

        <activity
            android:name="com.appdev.onetwoguide.SimpleMapActivity"
            android:label="@string/title_activity_simple_map"
            android:parentActivityName="com.google.android.maps.MapActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.google.android.maps.MapActivity" />
        </activity>
    </application>

    <!-- edited by Macc: Google Map API V2 requires OpenGL ES version 2 -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <!-- edited by Macc: Google Map API User Permission -->
    <permission
        android:name="com.appdev.onetwoguide.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.appdev.onetwoguide.permission.MAPS_RECEIVE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

</manifest>